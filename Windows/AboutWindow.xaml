<Window x:Class="QScalp.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QScalp"
        Title="О программе" WindowStartupLocation="CenterOwner" FontSize="14" SizeToContent="WidthAndHeight">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="20,5" />
                <Setter Property="TextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="ChildWindow" />
    </Window.Style>

    <!-- **************************************************************** -->

    <Border Margin="7" BorderThickness="1" BorderBrush="#FF919191" CornerRadius="5" Padding="5">
        <StackPanel>
            <TextBlock FontSize="20" FontWeight="Medium" Text="{x:Static local:cfg.FullProgName}" />
            <TextBlock>Торговый привод для<LineBreak/>биржевого терминала QUIK</TextBlock>
            <TextBlock>© 2012 Николай Морошкин<LineBreak/>
                <Hyperlink Click="SiteURL_Click">http://www.moroshkin.com</Hyperlink>
            </TextBlock>
            <Button Margin="15" Content="OK" Height="23" Width="75" IsCancel="True" IsDefault="True" />
        </StackPanel>
    </Border>

    <!-- **************************************************************** -->
</Window>

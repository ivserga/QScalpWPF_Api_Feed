<Window x:Class="QScalp.Windows.Config.SecListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор инструмента" Height="500" Width="400" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary Source="/Windows/Resources.xaml" />
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="ChildWindow" />
    </Window.Style>

    <!-- **************************************************************** -->

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TreeView Name="treeView" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Style="{StaticResource TopButton}" Content="OK" IsDefault="True" Name="buttonOk" Click="buttonOk_Click" IsEnabled="False" />
            <Button Style="{StaticResource TopButton}" Content="Отмена" IsCancel="True" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>

    <!-- **************************************************************** -->
</Window>
